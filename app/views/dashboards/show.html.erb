<%= form_for(@shout) do |form| %>
  <%= form.text_field :body, placeholder: "Shout here" %>
  <%= form.submit "Shout!" %>
<% end %>

<% @shouts.each do |shout| %>
  <%= div_for(shout) do %>
    <%= shout.user_email %>
    <%= shout.body %>
    <%= time_ago_in_words(shout.created_at) %> ago
  <% end %>
<% end %>
